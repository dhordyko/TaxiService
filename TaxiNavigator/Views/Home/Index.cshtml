                function showError(error) {
                    if (error.code == 1) {
                        $("#message").html("User denied the request for Geolocation.");
                    }
                    else if (error.code == 2) {
                        $("#message").html("Location information is unavailable.");
                    }
                    else if (error.code == 3) {
